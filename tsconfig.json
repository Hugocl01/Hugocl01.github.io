{
    "extends": "astro/tsconfigs/strict",

    /* - Sirve para haces un espacio de nombres similar al que usamos en PHP */
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@icons/*": ["src/icons"],
            "@cv": ["./cv.json"],
            "@/*": ["src/*"]
        }
    }
}
