---
import { basics } from "@cv";

interface Props {
    title: string;
}

const { title } = Astro.props;

const { image, summary, url } = basics;

// Fuente
import "@fontsource-variable/jetbrains-mono";

import Toggle from "@/components/ThemeChange.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preload" as="image" href={image} />

        <meta property="og:url" content={url} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={summary} />
        <meta property="og:image" content="" />
    </head>
    <body>
        <slot />
        <Toggle />
    </body>
</html>

<style is:global>
    :root {
        /* Colores de fondos */
        --background: #fff;
        --background-span: #eee;
        --background-a-hover: #777;

        /* Colores de textos */
        --text-p: #555;
        --text-h1: #000;
        --text-h2: #000;
        --text-h2-hero: #444;
        --text-h2: #444;
        --text-h3: #111;
        --text-hero-span: #666;
        --text-projects-span: #444;
        --text-footer: #555;
        --text-a: #777;
        --text-a-projects: #111;
        --text-a-hover: #eee;
        --text-time: #555;
        --text-li: #333;

        /* Colores de sombras */
        --shadow-projects-article: #f2f2f2;
        --box-shadow-projects-article: rgba(0, 0, 0, 0.1);

        /* Colores bordes */
        --border-a: #eee;
    }

    [data-theme="light"] {
        /* Colores de fondos */
        --background: #fff;
        --background-span: #eee;
        --background-a-hover: #777;

        /* Colores de textos */
        --text-p: #555;
        --text-h1: #000;
        --text-h2: #000;
        --text-h2-hero: #444;
        --text-h2: #444;
        --text-h3: #111;
        --text-hero-span: #666;
        --text-projects-span: #444;
        --text-footer: #555;
        --text-a: #777;
        --text-a-projects: #111;
        --text-a-hover: #eee;
        --text-time: #555;
        --text-li: #333;

        /* Colores de sombras */
        --shadow-projects-article: #f2f2f2;
        --box-shadow-projects-article: rgba(0, 0, 0, 0.1);

        /* Colores bordes */
        --border-a: #eee;
    }

    [data-theme="dark"] {
        /* Colores de fondos */
        --background: #111;
        --background-span: #1f1f1f;
        --background-a-hover: #fff;

        /* Colores de textos */
        --text-p: #b1b1b1;
        --text-h1: #fff;
        --text-h2: #ddd;
        --text-h2-hero: #bbb;
        --text-h3: #fff;
        --text-hero-span: #ccc;
        --text-projects-span: #cecece;
        --text-footer: #eee;
        --text-a: #aaa;
        --text-a-projects: #ddd;
        --text-a-hover: #111;
        --text-time: #b1b1b1;
        --text-li: #ccc;

        /* Colores de sombras */
        --shadow-projects-article: #222;
        --box-shadow-projects-article: rgba(255, 255, 255, 0.1);

        /* Colores bordes */
        --border-a: #222;
    }

    html {
        font-family:
            "JetBrains Mono Variable",
            Menlo,
            Monaco,
            Lucida Console,
            "Courier New",
            Courier,
            monospace;
    }

    body {
        background: var(--background);
    }

    body,
    figure {
        margin: 0;
        padding: 0;
    }

    a {
        text-decoration: none;
    }
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    h1 {
        font-size: 1.7rem; /* 1.5 veces el tamaño de fuente base del documento para h1 */
        color: var(--text-h1);
    }

    h2 {
        font-size: 1.2rem; /* 1.2 veces el tamaño de fuente base del documento para h2 */
        color: var(--text-h2);
    }

    h3 {
        font-size: 1rem; /* Tamaño de fuente base del documento para h3 */
        color: var(--text-h3);
    }

    h1,
    h2,
    h3,
    h4 {
        margin: 0;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }

    p {
        color: var(--text-p);
        font-size: 1rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
    }

    .print {
        display: none !important;
    }

    @media print {
        .no-print {
            display: none !important;
        }

        .print {
            display: block !important;
        }

        astro-dev-toolbar {
            display: none;
        }

        article {
            break-inside: avoid;
        }
    }
</style>
