<div class="loader" id="loader">
    <h1 class="typed"></h1>
</div>

<script>
    import Typed from "typed.js";

    window.addEventListener("DOMContentLoaded", () => {
        const loader = document.getElementById("loader");

        if (loader) {
            const typed = new Typed(".typed", {
                strings: ["Hugo.Portfolio"],
                typeSpeed: 100,
                startDelay: 500,
                cursorChar: "",
                fadeOut: true,
                onComplete: () => {
                    loader.style.opacity = "0";
                    loader.style.transition = "opacity 1s ease-in-out";
                    setTimeout(() => {
                        loader.remove();
                    }, 1000);
                },
            });
        }
    });
</script>

<style>
    .loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--background-loader);
        display: flex;
        justify-content: center;
        align-items: center;
        transition: opacity 0s ease-in-out;
    }

    h1 {
        color: var(--text-h1);
    }

    span {
        color: #a11717;
    }

    .typed {
        color: var(--text-h1);
    }

    .typed-cursor {
        color: var(--cursor-color);
    }
</style>
