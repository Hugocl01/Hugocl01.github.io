---
import Section from "@components/Section.astro";

import { languages } from "@cv";
---

<Section title="Idiomas">
    <ul>
        {
            languages.map(({ language, fluency }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{language}</h3>
                                </div>

                                <div>
                                    <p>Nivel: {fluency}</p>
                                </div>
                            </header>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        align-content: flex-end;
        margin-bottom: 4px;
    }

    p {
        color: #555;
        font-size: 0.85rem;
    }

    @media (width <= 700px) {
        time {
            text-align: right;
        }
    }
</style>
